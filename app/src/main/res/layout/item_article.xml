<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemArticleVm"
            type="com.lihui.hilt.data.model.ArticleModel" />

        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        android:background="@drawable/ripple_bg_white_r_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:text="@{itemArticleVm.author}"
                android:id="@+id/item_home_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp13"
                tools:text="有何高见" />

            <TextView
                android:visibility='@{itemArticleVm.fresh ? View.VISIBLE:View.GONE}'
                android:id="@+id/item_home_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_white_r_1_s_1"
                android:paddingLeft="@dimen/dp3"
                android:paddingRight="@dimen/dp3"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/sp10"
                android:text="置顶" />

            <TextView
                android:visibility='@{itemArticleVm.type ==1 ? View.VISIBLE:View.GONE}'
                android:id="@+id/item_home_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_white_r_1_s_1"
                android:paddingLeft="@dimen/dp3"
                android:paddingRight="@dimen/dp3"
                android:textColor="@android:color/holo_red_light"
                android:textSize="10dp"
                android:text="新" />

            <TextView
                data="@{itemArticleVm}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_white_r_1_s_green_1"
                android:paddingLeft="@dimen/dp3"
                android:paddingRight="@dimen/dp3"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/sp10"
                tools:text="问答"
                 />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:text="@{itemArticleVm.niceDate}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp13"
                tools:text="1小时前" />
        </LinearLayout>

        <TextView
            android:text="@{itemArticleVm.title}"
            android:id="@+id/item_home_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp8"
            tools:text="这是一个根据Hilt-flow-mvvm框架开发玩Android的一个APP"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text='@{itemArticleVm.superChapterName +"·"+itemArticleVm.chapterName}'
                android:id="@+id/item_home_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp12"
                android:layout_marginBottom="@dimen/dp12"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp13"
                tools:text="分类·项目" />

            <ImageView
                tools:src="@drawable/i_heart_gray"
                android:src='@{itemArticleVm.collect? @drawable/i_heart_red:@drawable/i_heart_gray}'
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp8" />
        </RelativeLayout>

    </LinearLayout>
</layout>